{
  "name": "{{name}}",
  "version": "0.0.1",
  "description": "Using webpack in multipage application",
  "license": "MIT",
  "path": "/",
  "main": "dist/server.js",
  "engines": {
    "node": ">=6.3",
    "npm": ">=3.10"
  },
  "author": {
    "name": "travisxu",
    "email": "xuzhengwei.amor@gmail.com"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --no-ignore --fix",
      "prettier --write",
      "git add --force"
    ]
  },
  "precommit": [
    "lint:staged",
    "lint"
  ],
  "scripts": {
    "dev": "npm run dev:server",
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "build": "npm-run-all clean build:server",
    "release": "npm-run-all clean build release:copy release:deps release:package",
    "test": "mocha -r babel-register -r should --exit",
    "clean": "rimraf dist release",
    "lint": "eslint src --ignore-pattern src/proxy",
    "lint:staged": "lint-staged",
    "test:cover": "nyc npm run test",
    "dev:server": "cross-env DEBUG=app:* nodemon --watch src/ --ignore src/assets --exec babel-node src/server.js",
    "build:server": "cross-env BABEL_ENV=production babel src -d dist --copy-files -s",
    "release:copy": "cross-env-shell \"shx mkdir -p release/$npm_package_name && shx cp -r package.json dist/ release/$npm_package_name\"",
    "release:deps": "cross-env-shell \"cd release/$npm_package_name && npm install --production\"",
    "release:package": "cross-env-shell \"cd release && tar -zcvf $npm_package_name.tar.gz $npm_package_name\""
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "lint-staged": "^6.0.0",
    "mocha": "^4.1.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "should": "^13.2.0",
    "shx": "^0.2.2",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "moment": "^2.20.1",
    "source-map-support": "^0.5.0"
  }
}
