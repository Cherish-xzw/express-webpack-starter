{
  "name": "webpack-multipage-solution",
  "version": "0.0.1",
  "description": "Using webpack in multipage application",
  "license": "MIT",
  "engines": {
    "node": ">=6.3",
    "npm": ">=3.10"
  },
  "browserslist": [">1%", "last 4 versions", "Firefox ESR", "not ie < 9"],
  "author": {
    "name": "travisxu",
    "email": "xuzhengwei.amor@gmail.com"
  },
  "lint-staged": {
    "*.{js,jsx}": ["eslint --no-ignore --fix", "git add --force"],
    "*.{js, json,md,graphql}": ["prettier --write", "git add --force"],
    "*.{css,less,styl,scss,sass,sss}": ["stylelint --fix", "git add --force"]
  },
  "precommit": ["lint:staged", "lint"],
  "scripts": {
    "dev": "concurrently -k \"npm run dev:client\" \"npm run dev:server\"",
    "start": "npm run build && cross-env NODE_ENV=production node dist/app.js",
    "build": "npm-run-all clean:client clean:server --parallel build:*",
    "release":
      "npm-run-all build clean:release release:copy release:deps release:package",
    "test": "mocha -r babel-register -r should --exit",
    "clean": "npm-run-all --parallel clean:*",
    "lint": "npm-run-all lint:js lint:css",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\"  .",
    "lint:css": "stylelint \"src/**/*.{css,less,styl,scss,sass,sss}\"",
    "lint:staged": "lint-staged",
    "test:cover": "nyc npm run test",
    "dev:server":
      "nodemon --ignore src/assets/ --ignore public/ --ignore config/ --exec babel-node src/app.js",
    "dev:client":
      "nodemon --watch config/webpack.config.js -- ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --config config/webpack.config.js",
    "clean:client": "rimraf public/assets",
    "clean:server": "rimraf dist",
    "clean:release": "rimraf release",
    "build:client":
      "cross-env NODE_ENV=production webpack --config config/webpack.config.js",
    "build:server":
      "cross-env BABEL_ENV=production babel src -d dist --ignore src/assets --copy-files -s",
    "release:copy":
      "mkdir -p release/$npm_package_name && shx cp -r package.json dist/ public/ release/$npm_package_name",
    "release:deps": "cd release/$npm_package_name && npm install --production",
    "release:package":
      "cd release && tar -zcvf $npm_package_name.tar.gz $npm_package_name"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "compression-webpack-plugin": "^1.0.1",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.2.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "lint-staged": "^6.0.0",
    "mocha": "^4.1.0",
    "node-sass": "^4.6.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "should": "^13.2.0",
    "shx": "^0.2.2",
    "style-loader": "^0.19.0",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^0.8.0",
    "supertest": "^3.0.0",
    "vue-loader": "^13.5.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "express-handlebars": "^3.0.0",
    "moment": "^2.20.1",
    "source-map-support": "^0.5.0"
  }
}
