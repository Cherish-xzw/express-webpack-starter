{
    "name": "webpack-multipage-solution",
    "version": "0.0.1",
    "description": "Using webpack in multipage application",
    "license": "MIT",
    "author": {
        "name": "travisxu",
        "email": "xuzhengwei.amor@gmail.com"
    },
    "scripts": {
        "dev": "concurrently -k \"npm run dev:client\" \"npm run dev:server\"",
        "start": "npm run build && cross-env NODE_ENV=production node dist/app.js",
        "build": "npm-run-all clean:client clean:server --parallel build:*",
        "release": "npm-run-all build clean:release release:copy release:deps release:package",
        "dev:server": "nodemon --ignore src/assets/ --ignore public/ --ignore config/ --exec babel-node src/app.js",
        "dev:client": "nodemon --watch config/webpack.config.js -- ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --config config/webpack.config.js",
        "clean:client": "rimraf public/assets",
        "clean:server": "rimraf dist",
        "clean:release": "rimraf release",
        "build:client": "cross-env NODE_ENV=production webpack --config config/webpack.config.js",
        "build:server": "cross-env BABEL_ENV=production babel src -d dist --ignore src/assets --copy-files",
        "release:copy": "mkdir -p release/$npm_package_name && shx cp -r package.json dist/ public/ release/$npm_package_name",
        "release:deps": "cd release/$npm_package_name && npm install --production",
        "release:package": "cd release && tar -zcvf $npm_package_name.tar.gz $npm_package_name"
    },
    "devDependencies": {
        "assets-webpack-plugin": "^3.5.1",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "compression-webpack-plugin": "^1.0.1",
        "concurrently": "^3.5.0",
        "copy-webpack-plugin": "^4.2.0",
        "cross-env": "^5.1.1",
        "css-loader": "^0.28.7",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^1.1.5",
        "html-loader": "^0.5.1",
        "node-sass": "^4.6.0",
        "nodemon": "^1.12.1",
        "npm-run-all": "^4.1.2",
        "optimize-css-assets-webpack-plugin": "^3.2.0",
        "rimraf": "^2.6.2",
        "sass-loader": "^6.0.6",
        "shx": "^0.2.2",
        "style-loader": "^0.19.0",
        "vue-loader": "^13.5.0",
        "webpack": "^3.8.1",
        "webpack-dev-server": "^2.9.4"
    },
    "dependencies": {
        "express": "^4.16.2",
        "express-handlebars": "^3.0.0"
    }
}
